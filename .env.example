# Environment variables for the Cybersecurity System
# Copy this file to .env and update the values

# Application settings
APP_NAME="Generative AI-Based Smart Cybersecurity System"
DEBUG=false
APP_VERSION="1.0.0"

# Server settings
HOST="0.0.0.0"
PORT=8000

# Database settings
DATABASE_URL="postgresql://user:password@localhost:5432/cybersecurity_db"

# Redis settings
REDIS_URL="redis://localhost:6379/0"

# Security settings
SECRET_KEY="your-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model settings
MODEL_PATH="models/"
MODEL_UPDATE_INTERVAL=3600

# Network monitoring
MONITOR_INTERFACES="eth0,wlan0"
PACKET_CAPTURE_TIMEOUT=30
MAX_PACKET_SIZE=65536

# Threat detection
THREAT_THRESHOLD=0.7
ANOMALY_THRESHOLD=0.8
MAX_CONCURRENT_ANALYSES=10

# Alerting
ALERT_EMAIL_ENABLED=true
ALERT_SLACK_ENABLED=false
ALERT_WEBHOOK_URL=""
ALERT_COOLDOWN=300

# Logging
LOG_LEVEL=INFO
LOG_FILE="logs/cybersecurity_system.log"
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# Dashboard settings
DASHBOARD_REFRESH_INTERVAL=5
MAX_DASHBOARD_HISTORY=1000
